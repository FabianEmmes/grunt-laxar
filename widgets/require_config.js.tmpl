/*global -require*/
var require = {
   baseUrl: '<%= baseUrl %>',
   deps: [<%
   for( var i = 0; i < deps.length; i++ ) {
      if( i ) { %>,<% } %>
      '<%= deps[ i ] %>'<%
   } %>
   ],
   shim: {<%
   if( paths[ 'angular' ] ) { %>
      angular: {<%
      if( paths[ 'jquery' ] ) { %>
         deps: [
            'jquery'
         ],<%
      } %>
         exports: 'angular'
      },<%
   }
   if( paths[ 'angular-mocks' ] ) { %>
      'angular-mocks': {
         deps: [
            'angular'
         ],
         init: function ( angular ) {
            'use strict';
            return angular.mock;
         }
      },<%
   }
   if( paths[ 'angular-route' ] ) { %>
      'angular-route': {
         deps: [
            'angular'
         ],
         init: function ( angular ) {
            'use strict';
            return angular.route;
         }
      },<%
   }
   if( paths[ 'angular-sanitize' ] ) { %>
      'angular-sanitize': {
         deps: [
            'angular'
         ],
         init: function ( angular ) {
            'use strict';
            return angular;
         }
      },<%
   }
   if( paths[ 'bootstrap' ] ) { %>
      'bootstrap/slider': [ 'jquery' ],
      'bootstrap/tooltip': [ 'jquery' ],<%
   }
   if( paths[ 'jquery' ] ) { %>
      jquery: {
         exports: '$'
      },<%
   }
   if( paths[ 'underscore' ] ) { %>
      underscore: {
         exports: '_'
      },<%
   }
   if( paths[ 'json-patch' ] ) { %>
      'json-patch': {
         exports: 'jsonpatch'
      },<%
   } %>
   },
   map: {
      '*': {<%
      if( paths[ 'laxar_patterns' ] ) { %>
         'laxar_patterns': 'laxar-patterns',<%
      }
      if( paths[ 'laxar_uikit' ] ) { %>
         'laxar_uikit': 'laxar-uikit',<%
      } %>
      }
   },
   packages: [<%
   for( var i = 0; i < packages.length; i++ ) {
      if( i ) { %>,<% } %>
      {
         name: '<%= packages[ i ].name %>',
         location: '<%= packages[ i ].location || packages[ i ].name %>',
         main: '<%= packages[ i ].main || packages[ i ].name %>'
      }<%
   } %>
   ],
   paths: {<%
   for( var p in paths ) {%>
      '<%= p %>': '<%= paths[p] %>',<%
   } %>
      // App Parts:
      'laxar-path-root': '..',
      'laxar-path-layouts': '../application/layouts',
      'laxar-path-pages': '../application/pages',
      'laxar-path-widgets': '../widgets',
      'laxar-path-themes': '../themes',
      'laxar-path-flow': '../application/flow/flow.json'
   }
};

